<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonTutorial"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonRecord"
        android:layout_centerVertical="true"
        android:onClick="openTutorialActivity"
        android:text="@string/tutorial" />

    <Button
        android:id="@+id/buttonGioca"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonTutorial"
        android:layout_alignLeft="@+id/buttonRecord"
        android:text="@string/gioca" />

    <Button
        android:id="@+id/buttonRecord"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonTutorial"
        android:layout_marginRight="35dp"
        android:text="@string/records" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/buttonGioca"
        android:layout_marginLeft="38dp"
        android:text="@string/app_name" />

</RelativeLayout>
