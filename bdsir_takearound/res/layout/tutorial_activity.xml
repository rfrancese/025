<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTutorialSPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewTutorialENG"
        android:text="@string/tutorialSPA"
        android:textColor="#00F"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewTutorialENG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewTutorialITA"
        android:text="@string/tutorialENG"
        android:textColor="#f00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewTutorialITA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/tutorialITA"
        android:textColor="#00FF00"
        android:textSize="30sp" />

</RelativeLayout>